<?xml version="1.0" encoding="utf-8"?>
<data-extraction-rules>
    <cloud-backup>
        <!--
        Backup configuration for Android 12+ (API 31+).
        Exclude sensitive automation data from cloud backups for privacy.
        -->
        <exclude domain="database" path="automations.db" />
        <exclude domain="database" path="automations.db-journal" />
        <exclude domain="sharedpref" path="api_keys.xml" />
    </cloud-backup>

    <device-transfer>
        <!--
        Device-to-device transfer configuration.
        Exclude API keys but allow automations to be transferred.
        -->
        <exclude domain="sharedpref" path="api_keys.xml" />
    </device-transfer>
</data-extraction-rules>
